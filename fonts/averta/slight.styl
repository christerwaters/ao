// Averta Regular
@font-face
	font-family Averta
	src	url('woff/hinted-Averta-Regular.woff') format('woff'),
		url('eot/hinted-Averta-Regular.eot') format('eot')
	font-weight 400
	font-style normal
	font-display swap

